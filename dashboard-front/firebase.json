{
    "hosting": {
        "site": "front-saas-dashboard",
        "public": "build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            },
            {
                "source": "/profile",
                "destination": "/index.html"
            },
            {
                "source": "/tutorials",
                "destination": "/index.html"
            },
            {
                "source": "/login",
                "destination": "/index.html"
            }
        ]
    }
}